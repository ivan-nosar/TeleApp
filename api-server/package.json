{
  "name": "api-server",
  "author": "Ivan Nosar",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivan-nosar/TeleApp/tree/master/api-server"
  },
  "description": "TeleApp core service",
  "main": "./dist/main.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "clean": "shx rm -rf ./dist",
    "dev": "tsc-watch --project tsconfig.json --preserveWatchOutput --onSuccess \"npm run start\"",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "start": "node --harmony --max-old-space-size=8192 ./dist/main.js"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "express": "4.17.1",
    "mysql2": "2.1.0",
    "reflect-metadata": "0.1.13",
    "typeorm": "0.2.22"
  },
  "devDependencies": {
    "@types/express": "4.17.2",
    "@types/mysql2": "github:types/mysql2",
    "@types/node": "13.7.1",
    "cross-env": "7.0.0",
    "shx": "0.3.2",
    "tsc-watch": "4.1.0",
    "tslint": "5.20.1",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "3.7.5"
  }
}
